##################
[<%= @jailname %>]
enabled  = <%= @real_status %>
<% if @filter -%>
filter   = <%= @filter %>
<% end -%>
<% if @ignoreip != [] -%>
ignoreip = <%= @ignoreip * ' ' %>
<% end -%>
<% if @port != [] -%>
port     = <%= @port * ',' %>
<% end -%>
<% if @jails_protocol -%>
protocol = <%= @jails_protocol %>
<% end -%>
<% if @action != [] -%>
action   = <%= @action.join("\n\t") %>
<% end -%>
<% if @logpath != [] -%>
logpath  = <%= @logpath.join("\n\t") %>
<% end -%>
<% if @maxretry -%>
maxretry = <%= @maxretry %>
<% end -%>
<% if @bantime -%>
bantime  = <%= @bantime %>
<% end -%>
<% if @findtime -%>
findtime = <%= @findtime %>
<% end -%>

